<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1028"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|right"
                android:gravity="bottom|end"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1024"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_clear"
                android:text="С"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="-1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_back"
                android:text="←"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_percent"
                android:text="%"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_divide"
                android:text="/"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="60sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_7"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_8"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_9"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_multiply"
                android:text="×"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="60sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_4"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_5"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_6"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_minus"
                android:text="-"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="60sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_1"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_2"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_3"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_plus"
                android:text="+"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="60sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sqrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_sqrt"
                android:text="√"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_0"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:onClick="onclick_dot"
                android:text=","
                android:textColor="@android:color/holo_green_dark"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btb_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_dark"
                android:onClick="onclick_equal"
                android:text="="
                android:textColor="@android:color/background_light"
                android:textSize="60sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>